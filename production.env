# ============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - Sistema ARCA Construcción
# ============================================================================
# IMPORTANTE: Cambiar todas las contraseñas y claves secretas antes de usar

# Configuración del entorno
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-2025

# Configuración de base de datos PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=arca_construccion
DB_USER=arca_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# Configuración de email (configurar con tu proveedor)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Configuración de caché Redis
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1
CACHE_TIMEOUT=300

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
REDIS_SSL=False

# Configuración de seguridad
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Configuración de archivos
MAX_UPLOAD_SIZE_MB=50
MEDIA_ROOT=/app/media
STATIC_ROOT=/app/staticfiles
BACKUP_ROOT=/app/backups
TEMP_ROOT=/app/temp

# Configuración de API
API_RATE_LIMIT_ENABLED=True
API_RATE_LIMIT_PER_HOUR=1000
API_CORS_ENABLED=False
API_CORS_ALLOWED_ORIGINS=
API_AUTHENTICATION_REQUIRED=True

# Configuración de notificaciones
NOTIFICATION_EMAIL_ENABLED=True
NOTIFICATION_SMS_ENABLED=False
NOTIFICATION_PUSH_ENABLED=False
NOTIFICATION_WEBHOOK_ENABLED=False
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_ATTEMPTS=3

# Configuración de respaldo
BACKUP_ENABLED=True
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=True
BACKUP_ENCRYPTION=False
BACKUP_VERIFICATION=True

# Configuración de mantenimiento
MAINTENANCE_ENABLED=False
MAINTENANCE_MESSAGE=El sistema está en mantenimiento. Por favor, inténtelo más tarde.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,localhost
MAINTENANCE_START_TIME=
MAINTENANCE_END_TIME=

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/django.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
